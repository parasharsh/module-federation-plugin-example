{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2020",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "shared-lib": [
        "projects/shared-lib/src/public-api.ts"
      ],
      "auth-lib": [
        "dist/auth-lib"
      ],
        "ui-sdk/i18n": [
          "projects/ui-sdk/src/lib/i18n"
        ],
        "ui-sdk/card": [
          "projects/ui-sdk/src/lib/card"
        ],
        "ui-sdk/button": [
          "projects/ui-sdk/src/lib/button"
        ],
      "ui-sdk": [
        "projects/ui-sdk/src/public-api.ts"
      ]
    }
  }
}